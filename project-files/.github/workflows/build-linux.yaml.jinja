name: "linux tests and package builds for '{{ project_slug }}'"
# This workflow is triggered on pushes to the repository.
on: [push]

jobs:

  commitlint:
    name: lint commit message
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v5
        with:
          fetch-depth: 0
      - uses: wagoid/commitlint-github-action@v6

  test-linux:
    name: pytest on linux
    runs-on: ubuntu-latest
    strategy:
      matrix:
        python_version: ["3.10", "3.11", "3.12", "3.13", "3.14"]
    steps:
      - uses: actions/checkout@v5
        with:
          fetch-depth: 0
      - name: install uv
        uses: astral-sh/setup-uv@v6
        with:
          enable-cache: true
      - name: install Python
        run: uv python install {% raw %}${{ matrix.python_version }}{% endraw %}
      - name: create lockfile
        if: hashFiles('uv.lock') == ''
        run: uv lock --python {% raw %}${{ matrix.python_version }}{% endraw %}
      - name: install the project
        run: uv sync --locked --dev --python {% raw %}${{ matrix.python_version }}{% endraw %}
      - name: test with pytest
        run: uv run pytest --cov-report=xml --cov={{ project_base_module }} tests

  type-check-linux:
    name: type check on linux
    runs-on: ubuntu-latest
    strategy:
      matrix:
        python_version: ["3.10", "3.11", "3.12", "3.13"]
    steps:
      - uses: actions/checkout@v5
        with:
          fetch-depth: 0
      - name: install uv
        uses: astral-sh/setup-uv@v6
        with:
          enable-cache: true
      - name: install Python
        run: uv python install {% raw %}${{ matrix.python_version }}{% endraw %}
      - name: create lockfile
        if: hashFiles('uv.lock') == ''
        run: uv lock --python {% raw %}${{ matrix.python_version }}{% endraw %}
      - name: install the project
        run: uv sync --locked --dev --python {% raw %}${{ matrix.python_version }}{% endraw %}
      - name: run type-checker
        run: make typecheck

  linting-linux:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v5
        with:
          fetch-depth: 0
      - uses: astral-sh/ruff-action@v3
        with:
          version: "latest"
          args: "--version"
      - name: Run ruff check
        run: ruff check src/
      - name: Run ruff check
        run: ruff format --check --diff src/

  build_python_package:
    name: build python package
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v5
        with:
          fetch-depth: 0
      - name: install uv
        uses: astral-sh/setup-uv@v6
        with:
          enable-cache: true
      - name: install Python
        run: uv python install 3.13
      - name: create lockfile
        if: hashFiles('uv.lock') == ''
        run: uv lock --python 3.13
      - name: install the project
        run: uv sync --locked --dev --python 3.13
      - name: create packages
        run: uv run python -m build
      - name: upload artifacts
        uses: actions/upload-artifact@v4
        with:
          name: build-dists
          path: dist/

  release_python_package:
    name: publish python package to pypi
    {% raw %}if: github.event_name == 'push' && startsWith(github.ref, 'refs/tags'){% endraw %}
    runs-on: ubuntu-latest
    needs:
      - build_python_package{% if anaconda_user %}
      - build_conda_package{% endif %}
    permissions:
      id-token: write
    steps:
      - name: Retrieve build distributions
        uses: actions/download-artifact@v5
        with:
          name: build-dists
          path: dist/
      - name: publish to PyPI  # make sure you have pypi trusted publishing configured for this repo: https://docs.pypi.org/trusted-publishers/
        uses: pypa/gh-action-pypi-publish@release/v1

{% if anaconda_user %}
  build_conda_package:
    name: conda package build
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v5
        with:
          fetch-depth: 0
      - name: install uv
        uses: astral-sh/setup-uv@v6
        with:
          enable-cache: true
      - name: build conda package
        run: uvx --from kiara --with kiara_plugin.dev kiara build conda pkg --channel dharpa --channel conda-forge --patch-data ci/conda/conda-pkg-patch.yaml --output-folder build-dir .
      - name: upload artifacts
        uses: actions/upload-artifact@v4
        with:
          name: conda-pkgs
          path: build-dir/

  release_conda_package:
    name: publish conda package to anaconda
    if: github.event_name == 'push' && startsWith(github.ref, 'refs/tags')
    runs-on: ubuntu-latest
    needs:
      - test-linux
      - type-check-linux
      - linting-linux
      - build_python_package
      - build_conda_package
    steps:
      - name: check if ANACONDA_PUSH_TOKEN is set
        run: |
          if [ -z {% raw %}"${{ secrets.ANACONDA_PUSH_TOKEN }}"{% endraw %} ]; then
          echo "Error: ANACONDA_PUSH_TOKEN secret is not set"
          echo "Please configure the ANACONDA_PUSH_TOKEN secret in your repository settings"
          exit 1
          else
          echo "ANACONDA_PUSH_TOKEN is configured"
          fi
      - name: install uv
        uses: astral-sh/setup-uv@v6
        with:
          enable-cache: true
      - name: Retrieve build distributions
        uses: actions/download-artifact@v5
        with:
          name: conda-pkgs
          path: build-dir/
      - name: release conda package
        run: uvx --from kiara --with kiara_plugin.dev kiara build conda publish --user {{ anaconda_user }} --channel main --token {% raw %}"${{ secrets.ANACONDA_PUSH_TOKEN }}" build-dir{% endraw %}

{% endif %}
  merge_tag_to_main:
    name: merge current tag to main branch
    runs-on: ubuntu-latest
    {% raw %}if: github.event_name == 'push' && startsWith(github.ref, 'refs/tags'){% endraw %}
    permissions:
      contents: write
      actions: write
    needs:
      - release_python_package{% if anaconda_user %}
      - release_conda_package{% endif %}
    steps:
    - uses: actions/checkout@v5
      with:
        fetch-depth: 0
    - run: git config --global user.email "{{ email }}"
    - run: git config --global user.name "{{ full_name }}"
    - name: extract tag name
      run: {% raw %}echo "RELEASE_VERSION=${GITHUB_REF#refs/*/}" >> $GITHUB_ENV{% endraw %}
    - name: checkout main branch
      run: |
        if git show-ref --verify --quiet refs/heads/main; then
          git checkout main
        else
          git checkout -b main
        fi
    - name: merge tag
      run: git merge "${RELEASE_VERSION}"
    - name: push updated main branch
      run: git push https://{% raw %}${{ secrets.GITHUB_TOKEN }}{% endraw %}@github.com/{{ github_user }}/{{ full_project_slug }}.git
